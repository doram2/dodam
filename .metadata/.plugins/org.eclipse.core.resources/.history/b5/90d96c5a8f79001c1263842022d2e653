package springBootTest2.service.library;

import java.io.File;
import java.io.FileInputStream;
import java.net.URLEncoder;

import javax.servlet.ServletOutputStream;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class FileDownLoadService {
	public void  fileDownLoad(String sfileName, String ofileName, 
							  HttpServletRequest request, HttpServletResponse response) {
		String path = "/view/lib";
		String RealPath = request.getServletContext().getRealPath(path);
		
		String originalFileName = null;
		try {
			originalFileName = URLEncoder.encode(ofileName, "utf-8");
		} catch (Exception e) {}
		response.setContentType("application/octet-stream;charset=urf-8");
		response.setHeader("Content-Disposition", "attatchment;filename='"+originalFileName+"';");
		response.setHeader("Content-Transfer-Encoding", "binary");
		File file = new File(RealPath + "/" + sfileName);
		
		ServletOutputStream out1 = null;
		FileInputStream fis = null;
		try {
			
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
